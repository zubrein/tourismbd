<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".RoomDetailsActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <TextView
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Supreme suit"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_below="@+id/image"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:text="The 42 rooms of Hotel Anis in Nice are tastefully furnished and have all the comforts of a 3 star modern building. Bright and surrounded by vegetation they are equipped with air conditioning, internet, telephone, minibar; many of the rooms have terraces and some, on the upper floors, have views of the ocean."
        android:layout_below="@+id/name"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/book_now"
        android:text="Book now"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>